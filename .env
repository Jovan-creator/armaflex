# Development Environment Variables
# For secret variables use DevServerControl tool with set_env_variable: ["KEY", "SECRET"]

# Hotel Management System Configuration
VITE_APP_NAME="Armaflex Hotel Management"
VITE_APP_VERSION="1.0.0"
VITE_ENVIRONMENT="development"

# Builder.io Integration (optional)
VITE_PUBLIC_BUILDER_KEY=__BUILDER_PUBLIC_KEY__

# Demo Configuration
VITE_DEMO_MODE="true"
PING_MESSAGE="Armaflex Hotel Development Server"

# Stripe Configuration (replace with your actual keys)
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_51234567890_test_key_replace_with_your_key"
STRIPE_SECRET_KEY="sk_test_51234567890_test_key_replace_with_your_key"
STRIPE_WEBHOOK_SECRET="whsec_replace_with_your_webhook_secret"

# Email Configuration (replace with your email service credentials)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@armaflex.com"

# SMS Configuration (replace with your Twilio credentials)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_FROM_NUMBER="+1234567890"

# Hotel Information
